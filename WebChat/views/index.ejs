<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebChat</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"></script>
</head>
<body>
    <div class="title">
        <h1>WebZap</h1>
        <img src="https://cdn.usbrandcolors.com/images/logos/whatsapp-logo.svg" alt="whatsapp-logo" class="title-image">
    </div>
    <div class="allContainer">
           <ul id="usersContainer" class="container usersContainer">
        </ul> 
        <ul id="msgContainer" class="container msgContainer">
            <% history.forEach((msg) => { %>
                <li data-testid="message"><%= msg %></li>
              <% }) %>
        </ul>
    </div>
    <fieldset class="nick">
        <span id="user">Ol√°, </span>
        <div>
            <input type="text" name="username" id="nickInput" data-testid="nickname-box" placeholder="Seu nome">
            <button id="nickBtn" data-testid="nickname-button">Registrar</button>
        </div>
    </fieldset>
    <fieldset class="msgForm">
        <input id="messageInput" type="text" data-testid="message-box" placeholder="Digite a sua mensagem">
        <button id="messageBtn" data-testid="send-button">Enviar</button>
    </fieldset>
   <script src="script.js"></script>
</body>
</html>